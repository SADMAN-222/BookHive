<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:background="@drawable/bg"
    android:alpha="0.90">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signup"
        android:textSize="24sp"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:id="@+id/tvSignup" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_below="@id/tvSignup"
        android:layout_marginTop="20dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TableRow>

                <TextView
                    android:text="Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text=":"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"/>

                <EditText
                    android:id="@+id/etName"
                    android:layout_weight="1"
                    android:inputType="textCapWords"
                    android:maxLength="8"
                    android:textColor="#FFFFFF"/>
            </TableRow>

            <TableRow android:layout_marginTop="12dp">

                <TextView
                    android:text="Email"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text=":"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"/>

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_weight="1"
                    android:inputType="textEmailAddress"
                    android:maxLength="128"
                    android:textColor="#FFFFFF"/>
            </TableRow>

            <TableRow android:layout_marginTop="12dp">

                <TextView
                    android:text="Phone"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text=":"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"/>

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_weight="1"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:textColor="#FFFFFF"/>
            </TableRow>

            <TableRow android:layout_marginTop="12dp">

                <TextView
                    android:text="Password"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text=":"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"/>

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_weight="1"
                    android:inputType="textPassword"
                    android:maxLength="6"
                    android:textColor="#FFFFFF"/>
            </TableRow>

            <TableRow android:layout_marginTop="12dp">

                <TextView
                    android:text="Confirm Password"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text=":"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"/>

                <EditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_weight="1"
                    android:inputType="textPassword"
                    android:maxLength="6"
                    android:textColor="#FFFFFF"/>
            </TableRow>

            <CheckBox
                android:id="@+id/cbRememberUser"
                android:layout_marginTop="16dp"
                android:text="Remember User"
                android:textSize="16sp"
                android:textColor="#FFFFFF"/>

            <CheckBox
                android:id="@+id/cbRememberLogin"
                android:text="Remember Login"
                android:textSize="16sp"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/btnSignAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#3F51B5"
                android:text="Signup as Admin" />
            <Button
                android:id="@+id/btnSignUser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Signup as User"
                android:backgroundTint="#00BCD4"/>
            <Button
                android:id="@+id/btnLogin"
                android:layout_marginTop="32dp"
                android:backgroundTint="#03A9F4"
                android:text="Already have an account?" />
        </TableLayout>
    </LinearLayout>

</RelativeLayout>
